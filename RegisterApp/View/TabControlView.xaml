<UserControl x:Class="RegisterApp.View.TabControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RegisterApp.View"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <TabControl>
        
        <!-- Page RegistrationView -->
        <TabItem Header="Registration"
        >
            <UserControl Content="{Binding RegistrationView}"
            />
        </TabItem>
        
        
        <!-- Page LoginView -->
        <TabItem Header="Login"
        >
            <UserControl Content="{Binding LoginView}"
            />
        </TabItem>
        
    </TabControl>
</UserControl>
